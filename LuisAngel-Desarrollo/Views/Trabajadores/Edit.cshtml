@model LuisAngel_Desarrollo.Models.Trabajadores

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Trabajadores</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TipoDocumento" class="control-label"></label>
                <select asp-for="TipoDocumento" class="form-control">
                    <option value="">Seleccione Tipo Documento</option>
                    <option value="DNI">DNI</option>
                    <option value="Carnet">Carnet</option>
                </select>


                <span asp-validation-for="TipoDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroDocumento" class="control-label"></label>
                <input asp-for="NumeroDocumento" class="form-control" placeholder="Ej. 12345678" />
                <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" placeholder="Ingrese nombres completos" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sexo" class="control-label"></label>
                <select asp-for="Sexo" class="form-control">
                    <option value="">Seleccione Sexo</option>
                    <option value="M">Masculino</option>
                    <option value="F">Femenino</option>
                </select>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdDepartamento" class="control-label"></label>
                <select asp-for="IdDepartamento" class="form-control" asp-items="ViewBag.IdDepartamento">
                    <option value="">Seleccione Departamento</option>
                </select>
                <span asp-validation-for="IdDepartamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdProvincia" class="control-label"></label>
                <select asp-for="IdProvincia" class="form-control" asp-items="ViewBag.IdProvincia">
                    <option value="">Seleccione Provincia</option>
                </select>
                <span asp-validation-for="IdProvincia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdDistrito" class="control-label"></label>
                <select asp-for="IdDistrito" class="form-control" asp-items="ViewBag.IdDistrito">
                    <option value="">Seleccione Distrito</option>
                </select>
                <span asp-validation-for="IdDistrito" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
